import * as std from "tstl";

import {ICollection} from "../basic/ICollection";
import {CollectionEvent} from "../basic/CollectionEvent";
import {EventDispatcher} from "../basic/EventDispatcher";

import * as internal from "./internal";

export class Type<Key, T> 
	extends std.Type<Key, T>
	implements ICollection<std.Entry<Key, T>, 
		std.Type<Key, T>, 
		std.Type.Iterator<Key, T>, 
		std.Type.ReverseIterator<Key, T>>
{
	/**
	 * @hidden
	 */
	private dispatcher_: EventDispatcher<std.Entry<Key, T>, 
		std.Type<Key, T>, 
		std.Type.Iterator<Key, T>, 
		std.Type.ReverseIterator<Key, T>> = new EventDispatcher();

	/* ---------------------------------------------------------
		CONSTRUCTORS
	--------------------------------------------------------- */
	// using super.constructor;

	public clear(): void
	{
		let first = this.begin();
		let last = this.end();

		super.clear();
		this.dispatchEvent(new CollectionEvent("erase", first, last));
	}

	protected _Create_element_list(): std.base._MapElementList<Key, T, std.Type<Key, T>>
	{
		return new internal._MapElementList(this as std.Type<Key, T>);
	}

	/* ---------------------------------------------------------
		ELEMENTS I/O
	--------------------------------------------------------- */
	/**
	 * @hidden
	 */
	protected _Handle_insert(first: std.Type.Iterator<Key, T>, last: std.Type.Iterator<Key, T>): void
	{
		super._Handle_insert(first, last);
		
		this.dispatchEvent(new CollectionEvent("insert", first, last));
	}

	/**
	 * @hidden
	 */
	protected _Handle_erase(first: std.Type.Iterator<Key, T>, last: std.Type.Iterator<Key, T>): void
	{
		this._Handle_erase(first, last);
		
		this.dispatchEvent(new CollectionEvent("erase", first, last));
	}

	/* =========================================================
		EVENT DISPATCHER
			- NOTIFIERS
			- ACCESSORS
	============================================================
		NOTIFIERS
	--------------------------------------------------------- */
	/**
	 * @inheritDoc
	 */
	public dispatchEvent(event: Type.Event<Key, T>): void
	{
		this.dispatcher_.dispatchEvent(event);
	}

	/**
	 * @inheritDoc
	 */
	public refresh(): void;

	/**
	 * @inheritDoc
	 */
	public refresh(it: std.Type.Iterator<Key, T>): void;

	/**
	 * @inheritDoc
	 */
	public refresh(first: std.Type.Iterator<Key, T>, last: std.Type.Iterator<Key, T>): void;

	public refresh(first: std.Type.Iterator<Key, T> = null, last: std.Type.Iterator<Key, T> = null): void
	{
		if (first == null)
		{
			first = this.begin();
			last = this.end();
		}
		else if (last == null)
			last = first.next();

		this.dispatchEvent(new CollectionEvent("refresh", first, last));
	}

	/* ---------------------------------------------------------
		ACCESSORS
	-------------------------------------------------------- */
	/**
	 * @inheritDoc
	 */
	public hasEventListener(type: CollectionEvent.Type): boolean
	{
		return this.dispatcher_.hasEventListener(type);
	}

	/**
	 * @inheritDoc
	 */
	public addEventListener(type: CollectionEvent.Type, listener: Type.Listener<Key, T>): void
	{
		this.dispatcher_.addEventListener(type, listener);
	}

	/**
	 * @inheritDoc
	 */
	public removeEventListener(type: CollectionEvent.Type, listener: Type.Listener<Key, T>): void
	{
		this.dispatcher_.removeEventListener(type, listener);
	}
}

export namespace Type
{
	export type Event<Key, T> = CollectionEvent<std.Entry<Key, T>, 
		std.Type<Key, T>, 
		std.Type.Iterator<Key, T>, 
		std.Type.ReverseIterator<Key, T>>;

	export type Listener<Key, T> = CollectionEvent.Listener<std.Entry<Key, T>, 
		std.Type<Key, T>, 
		std.Type.Iterator<Key, T>, 
		std.Type.ReverseIterator<Key, T>>;

	export const Event = CollectionEvent;
	export import Iterator = std.Type.Iterator;
	export import ReverseIterator = std.Type.ReverseIterator;
}